---
const { title, image, resume = "", link, large = false } = Astro.props;
---

<div
  class={`w-full ${large ? "" : "md:w-1/3"} ${large ? "h-[150px] grid grid-cols-2 grid-rows-3" : ""} ${large ? "p-3" : "p-6"} rounded-lg shadow text-gray-900 bg-white border border-gray-600 hover:bg-gray-100 hover:text-green-600 hover:border-green-600 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-green-600 focus:border-green-600`}
>
  <img
    class={`m-auto ${large ? "col-span-1 row-span-2" : ""}`}
    src={image}
    alt={title}
    width="100px"
    height="100px"
  />
  <div class={`${large ? resume === "" ? "col-span-1 row-span-3 m-auto" : "col-span-1 row-span-2" : ""}`}>
    <h5 class="mb-2 text-2xl font-semibold tracking-tight text-gray-900">
      {title}
    </h5>
    {resume !== "" && <p class="mb-3 font-normal text-gray-500">{resume}</p>}
  </div>
  <div class={`${large ? "col-span-1 row-span-1 m-auto text-center text-sm" : ""}`}>
    <a
      href={link}
      class="inline-flex font-medium items-center text-blue-600 hover:underline"
      target="_blank"
    >
      Ir al documento
      <svg
        class="w-3 h-3 ms-2.5 rtl:rotate-[270deg]"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 18 18"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M15 11v4.833A1.166 1.166 0 0 1 13.833 17H2.167A1.167 1.167 0 0 1 1 15.833V4.167A1.166 1.166 0 0 1 2.167 3h4.618m4.447-2H17v5.768M9.111 8.889l7.778-7.778"
        ></path>
      </svg>
    </a>
  </div>
</div>
