---
import { Schedule } from "../data/Schedule";
---

<ol class="relative border-s border-gray-600">
  {
    Schedule.map((schedule) => (
      <li class="mb-10 ms-4">
        <div class="absolute w-3 h-3 bg-gray-700 rounded-full mt-1.5 -start-1.5 border border-green-600" />
        <time class="mb-1 text-lg font-normal leading-none text-gray-700">
          {schedule.hour}
        </time>
        <h3 class="text-lg font-semibold text-gray-900">
          {schedule.description}
        </h3>
        <p class="mb-4 text-base font-normal text-gray-600">
          {schedule.resume}
        </p>
        {schedule.link !== "" && (
          <a
            href={schedule.link}
            target="_blank"
            class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-600 rounded-lg hover:bg-gray-100 hover:text-green-600 hover:border-green-600 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-green-600 focus:border-green-600"
          >
            Descargar material{" "}
            <svg
              class="w-3 h-3 ms-2 rtl:rotate-180"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 14 10"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M1 5h12m0 0L9 1m4 4L9 9"
              />
            </svg>
          </a>
        )}
      </li>
    ))
  }
</ol>
